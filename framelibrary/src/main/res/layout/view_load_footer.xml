<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_49">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_load_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_header_refresh"
            android:visibility="gone" />
        <!--android:background="@android:drawable/stat_notify_sync"-->
        <TextView
            android:id="@+id/tv_load_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_10"
            android:text="@string/text_load_more"
            android:textColor="@color/color_111624"
            android:textSize="@dimen/text_15" />
    </LinearLayout>
</RelativeLayout>
