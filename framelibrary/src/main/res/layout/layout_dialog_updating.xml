<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dialog_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/main_25"
        android:layout_marginRight="@dimen/main_25"
        android:background="@drawable/bg_main_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/main_15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_update_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现新版本"
                android:textColor="@color/color_111624"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/tv_dialog_update_title_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_3"
                android:textColor="@color/color_111624"
                android:textSize="@dimen/text_17" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/main_20"
            android:layout_marginTop="@dimen/main_10"
            android:layout_marginRight="@dimen/main_20"
            android:layout_weight="1000">

            <TextView
                android:id="@+id/tv_dialog_update_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:minHeight="@dimen/main_75"
                android:textColor="@color/color_111624"
                android:textSize="@dimen/text_14" />
        </ScrollView>

        <View
            android:id="@+id/view_dialog_update_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_1"
            android:layout_marginTop="@dimen/main_10"
            android:background="@color/color_d8d8d8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_dialog_update_force_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_55"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="立即体验"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_16"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout_dialog_update_not_force"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dialog_update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1000"
                android:gravity="center"
                android:text="暂不更新"
                android:textColor="@color/color_111624"
                android:textSize="@dimen/text_16" />

            <View
                android:id="@+id/line_dialog_btn"
                android:layout_width="@dimen/main_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/main_15"
                android:layout_marginBottom="@dimen/main_15"
                android:background="@color/color_d8d8d8" />

            <TextView
                android:id="@+id/tv_dialog_update_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1000"
                android:gravity="center"
                android:text="立即体验"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
